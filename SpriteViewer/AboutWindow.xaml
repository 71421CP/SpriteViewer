<Window x:Class="SpriteViewer.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpriteViewer"
        mc:Ignorable="d"
        Title="AboutWindow" Width="300" Height="300" MinWidth="300" MinHeight="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <!--Text-->
        <ScrollViewer>
            <TextBlock TextWrapping="WrapWithOverflow">
                Display images and play spritesheet animations.<LineBreak/>
                Usable imagetypes are PNG, JPEG and BMP.<LineBreak/>
                <LineBreak/>
                Minimum resolution of the source image must be 100x100 px.<LineBreak/>
                <LineBreak/>
                Adjust the playspeed with the slider at the top. Up to 60 fps are possible.<LineBreak/>
                Set the total framecount of the spritesheet aswell as at which frame the animation should start and how many frames it includes (pressing ENTER is required to set the new resolution).<LineBreak/>
                Adjust the resolution of a single frame and add an additional border which will be cut out.
            </TextBlock>
        </ScrollViewer>
    </Grid>
</Window>
